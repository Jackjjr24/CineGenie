{
  "name": "film-storyboard-ai",
  "version": "1.0.0",
  "description": "AI-powered web application that transforms film scripts into emotionally expressive storyboards",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": ["ai", "storyboard", "filmmaking", "nlp", "stable-diffusion"],
  "author": "Film Storyboard AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "axios": "^1.6.0",
    "@huggingface/inference": "^2.6.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}